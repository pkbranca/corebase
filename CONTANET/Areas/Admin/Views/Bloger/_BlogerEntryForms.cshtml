
@using CONTANET.Areas.Admin.Models.BlogerViewModels
@model BlogerFieldsViewModel

<div class="form-group m-form__group row">
    <div class="col-lg-12">
        <label asp-for="Name" class="form-control-label">Nombres</label>
        <div class="m-input-icon m-input-icon--right">
            <input asp-for="Name" class="form-control m-input" placeholder="Nombres" required pattern="^[\w]+[a-zA-ZñÑáéíóúÁÉÍÓÚ\s]+$" />
            <span class="m-input-icon__icon m-input-icon__icon--right">
                <span>
                    <i class="la la-info-circle"></i>
                </span>
            </span>
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="form-group m-form__group">
            <label asp-for="PaternalSurname" class="form-control-label">Apellido Paterno</label>
            <div class="m-input-icon m-input-icon--right">
                <input asp-for="PaternalSurname" class="form-control m-input" placeholder="Apellido Paterno" required pattern="^[\w]+[a-zA-ZñÑáéíóúÁÉÍÓÚ\s]+$" />
                <span class="m-input-icon__icon m-input-icon__icon--right">
                    <span>
                        <i class="la la-info-circle"></i>
                    </span>
                </span>
            </div>
            <span asp-validation-for="PaternalSurname" class="text-danger"></span>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="form-group m-form__group">
            <label asp-for="MaternalSurname" class="form-control-label">Apellido Materno</label>
            <div class="m-input-icon m-input-icon--right">
                <input asp-for="MaternalSurname" class="form-control m-input" placeholder="Apellido Materno" required pattern="^[\w]+[a-zA-ZñÑáéíóúÁÉÍÓÚ\s]+$" />
                <span class="m-input-icon__icon m-input-icon__icon--right">
                    <span>
                        <i class="la la-info-circle"></i>
                    </span>
                </span>
            </div>
            <span asp-validation-for="MaternalSurname" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="form-group m-form__group row">
    <div class="col-lg-12">
        <label asp-for="Email" class="form-control-label">Correo electrónico</label>
        <div class="m-input-icon m-input-icon--right">
            <input asp-for="Email" class="form-control m-input" placeholder="Correo electrónico" type="email" required />
            <span class="m-input-icon__icon m-input-icon__icon--right">
                <span>
                    <i class="so socicon-mail"></i>
                </span>
            </span>
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
</div>

<div class="form-group m-form__group row">
    <div class="col-lg-12">
        <label asp-for="UserName" class="form-control-label">Usuario</label>
        <div class="m-input-icon m-input-icon--right">
            <input asp-for="UserName" class="form-control m-input" placeholder="Usuario" type="text" pattern="^[\w\-\.\_]+$" required />
            <span class="m-input-icon__icon m-input-icon__icon--right">
                <span>
                    <i class="la la-user"></i>
                </span>
            </span>
        </div>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="form-group m-form__group">
            <label asp-for="PhoneNumber" class="form-control-label">Teléfono</label>
            <div class="m-input-icon m-input-icon--right">
                <input asp-for="PhoneNumber" class="form-control m-input" placeholder="Teléfono" required pattern="^[1-9][0-9]{8,8}$" />
                <span class="m-input-icon__icon m-input-icon__icon--right">
                    <span>
                        <i class="la la-phone"></i>
                    </span>
                </span>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group m-form__group">
            <label asp-for="Dni" class="form-control-label">Dni</label>
            <div class="m-input-icon m-input-icon--right">
                <input asp-for="Dni" type="number" class="form-control m-input" placeholder="Dni" required" />
                <span class="m-input-icon__icon m-input-icon__icon--right">
                    <span>
                        <i class="la la-info-circle"></i>
                    </span>
                </span>
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="form-group m-form__group">
            <label asp-for="Password" class="form-control-label">Contraseña</label>
            <div class="m-input-icon m-input-icon--right">
                <input asp-for="Password" class="form-control m-input" placeholder="Contraseña" type="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" minlength="6" title="La contraseña debe contener al menos un número, una mayúscula y no menos de 6 caracteres" />
                <span class="m-input-icon__icon m-input-icon__icon--right">
                    <span>
                        <i class="la la-user-secret"></i>
                    </span>
                </span>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group m-form__group">
            <label asp-for="ConfirmedPassword" class="form-control-label">Confirmar contraseña</label>
            <div class="m-input-icon m-input-icon--right">
                <input asp-for="ConfirmedPassword" class="form-control m-input" placeholder="Confirmar contraseña" type="password" required title="Las contraseñas no coinciden." />
                <span class="m-input-icon__icon m-input-icon__icon--right">
                    <span>
                        <i class="la la-user-secret"></i>
                    </span>
                </span>
            </div>
            <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
        </div>
    </div>
</div> 

<style>
    .row {
        padding-top: 15px;
        padding-bottom: 15px;
    }
</style>